# Backend API URL
# For local development with separate backend server:
VITE_API_BASE_URL=http://localhost:8000

# For Vercel deployment (frontend + backend together):
# Leave VITE_API_BASE_URL empty or comment it out
# The app will automatically use /api endpoint
# VITE_API_BASE_URL=

# Gemini API Key (if using AI features)
GEMINI_API_KEY=your_gemini_api_key_here

# Database Configuration
# For local development: SQLite (default)
DATABASE_URL=sqlite:///./database.db

# For Vercel deployment: Use Vercel Postgres
# Add this in Vercel Dashboard -> Settings -> Environment Variables
# POSTGRES_URL=postgresql://user:password@host:port/database
# (Vercel will automatically provide this if you add Vercel Postgres)

# JWT Secret Key for authentication
# Generate a secure random string for production
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
